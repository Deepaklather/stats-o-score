<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manvijay.sports_app.Current_Matches">

    <LinearLayout
        android:id="@+id/layout_3horizontals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_series"
                android:textAlignment="center"
                android:id="@+id/testtext"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/testtext"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/odi_matches"
                android:textAlignment="center"
                android:id="@+id/oditext"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/oditext"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/t20_matches"
                android:textAlignment="center"
                android:id="@+id/t20text"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/t20text"/>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>
